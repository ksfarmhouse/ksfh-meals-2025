@page
@model TreasurerModel
@{
    ViewData["Title"] = "Treasurer";
    ViewData["ActivePage"] = "Treasurer";
}

<head>
    <link rel="stylesheet" href="~/css/TreasurerFormat.css" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<div class="text-center">
    <h1 class="title">Treasurer Overview</h1>
</div>

<!-- Treasurer Table -->
<div class="treasurer-table-container">
    <table class="TreasurerTable">
        <thead>
            <tr>
                <th>Last</th>
                <th>First</th>
                <th>Lunch Count</th>
                <th>Dinner Count</th>
                <th>House Status</th>
            </tr>
        </thead>
        <tbody>
		@foreach (Data.Member m in Model.AllMembers)
		{
                <!-- Only display members with meals and out-of-house status -->
			@if(m.LunchCount > 0 || m.DinnerCount > 0 && (m.HouseStatus == Data.Status.OutOfHouse))
			{
				<tr>
					<td>@m.LastName</td>
					<td>@m.FirstName</td>
					<td>@m.LunchCount</td>
					<td>@m.DinnerCount</td>
					<td>@m.HouseStatus</td>
				</tr>
			}
		}
	 </tbody>
    </table>
</div>