@page
@model IndexModel
@{
    ViewData["Title"] = "Menu";
    ViewData["ActivePage"] = "Menu";
}

<head>
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<h1 class="title">Weekly Meals</h1>
<!-- Main Weekday Menu Table (Mon–Fri) -->
<div class="text-center">
    <table class="WeekdayTable">
        <thead>
            <tr>
                <th>Monday</th>
                <th>Tuesday</th>
                <th>Wednesday</th>
                <th>Thursday</th>
                <th>Friday</th>
            </tr>
        </thead>
        <tbody>
            <!-- Lunch Row -->
            <tr>
                @foreach (string s in Model.LunchMenu.Take(5))
                {
                    <td>@s</td>
                }
            </tr>

            <!-- Dinner Row -->
            <tr>
                @foreach (string s in Model.DinnerMenu)
                {
                    <td>@s</td>
                }
            </tr>
        </tbody>
    </table>

    <!-- Weekend Lunch Table (Sat–Sun) -->
    <table class="WeekendTable" style="margin-top: 20px;">
        <thead>
            <tr>
                <th>Saturday</th>
                <th>Sunday</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @foreach (string s in Model.LunchMenu.Skip(5))
                {
                    <td>@s</td>
                }
            </tr>
        </tbody>
    </table>
</div>
