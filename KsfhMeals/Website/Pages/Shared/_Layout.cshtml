@* _Layout.cshtml — main layout for FH Meals *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Website</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />

    <!-- JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Icons -->
    <link rel="icon" type="image/png" href="~/images/FHBasicCrest.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="~/images/FHBasicCrest.png" />
</head>

<body>
    <!-- Header / Navigation -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <a class="navbar-brand" asp-area="" asp-page="/Index">FH Meals</a>

            <!-- Mobile menu button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#mainNavbarCollapse" aria-controls="mainNavbarCollapse"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Collapsible menu -->
            <div class="navbar-collapse collapse" id="mainNavbarCollapse">
                <ul class="navbar-nav">
                    <!-- Menu -->
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Menu" ? "active" : "")"
                           asp-area="" asp-page="/Index">Menu</a>
                    </li>
                    <!-- Meal Sign Up -->
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Meal Sign Up" ? "active" : "")"
                           asp-area="" asp-page="/MealSignUp">Meal Sign Up</a>
                    </li>
                    <!-- Permanent Meal Sign Up -->
                    @* <li class="nav-item">
                        <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Permanent Sign Up" ? "active" : "")"
                           asp-area="" asp-page="/PermaSignUp">Permanent Sign Up</a>
                    </li> *@
                    <!-- Early and Late Plates -->
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Early/Late Plates" ? "active" : "")"
                           asp-area="" asp-page="/EarlyLatePlates">Early/Late Plates</a>
                    </li>
                    <!-- Get ID -->
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Get ID" ? "active" : "")"
                           asp-area="" asp-page="/GetID">Get ID</a>
                    </li>
                    <!-- Crew -->
                    @* <li class="nav-item">
                        <a class="nav-link" asp-page="/Crew">Crew</a>
                    </li> *@
                    <!-- Treasurer -->
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Treasurer" ? "active" : "")"
                           asp-area="" asp-page="/Treasurer">Treasurer</a>
                    </li>
                    <!-- Authorize (which leads to Admin after password entered) -->
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Admin" ? "active" : "")"
                           asp-area="" asp-page="/Authorize">Admin</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- Main page content (replaced by each Razor page) -->
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        &copy; 2025 - FH Meal Website -
        <a asp-area="" asp-page="/Privacy">Privacy</a>
    </footer>

    <!-- Optional per-page scripts -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
